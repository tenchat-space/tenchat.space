# ============================================
# APPWRITE CONFIGURATION
# ============================================
# Note: This is a sample file. Copy to .env for local development

# Appwrite Endpoint (public)
VITE_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1

# Appwrite Project ID (add your actual project ID)
VITE_APPWRITE_PROJECT_ID=

# ============================================
# DATABASE IDS
# ============================================
# WhisperrNote Database (for users table)
VITE_DATABASE_WHISPERRNOTE=67ff05a9000296822396

# Chat Database (main chat tables)
VITE_DATABASE_CHAT=chat

# ============================================
# TABLE IDS - WHISPERRNOTE DATABASE
# ============================================
# Prefer VITE_TABLE_* naming (legacy VITE_COLLECTION_* also supported)
VITE_TABLE_USERS=67ff05c900247b5673d3

# ============================================
# TABLE IDS - CHAT DATABASE
# ============================================
# Core Chat Tables
VITE_TABLE_CONVERSATIONS=conversations
VITE_TABLE_MESSAGES=messages
VITE_TABLE_MESSAGE_QUEUE=messageQueue
VITE_TABLE_CONTACTS=contacts
VITE_TABLE_TYPING_INDICATORS=typingIndicators
VITE_TABLE_PRESENCE=presence

# Social Tables
VITE_TABLE_STORIES=stories
VITE_TABLE_STORY_VIEWS=storyViews
VITE_TABLE_POSTS=posts
VITE_TABLE_FOLLOWS=follows

# Web3 Tables
VITE_TABLE_WALLETS=wallets
VITE_TABLE_TOKEN_HOLDINGS=tokenHoldings

# Content Tables
VITE_TABLE_STICKERS=stickers
VITE_TABLE_STICKER_PACKS=stickerPacks
VITE_TABLE_USER_STICKERS=userStickers
VITE_TABLE_GIFS=gifs
VITE_TABLE_POLLS=pollls
VITE_TABLE_AR_FILTERS=arFilters
VITE_TABLE_MEDIA_LIBRARY=mediaLibrary

# ============================================
# STORAGE BUCKET IDS
# ============================================
VITE_BUCKET_COVERS=covers
VITE_BUCKET_MESSAGES=messages
VITE_BUCKET_STORIES=stories
VITE_BUCKET_POSTS=posts
VITE_BUCKET_NFTS=nfts
VITE_BUCKET_STICKERS=stickers
VITE_BUCKET_FILTERS=filters
VITE_BUCKET_GIFS=gifs
VITE_BUCKET_VOICE=voice
VITE_BUCKET_VIDEO=video
VITE_BUCKET_DOCUMENTS=documents

# ============================================
# WEB3 CONFIGURATION (Optional - Add if needed)
# ============================================
# Web3 Auth Function ID (for wallet login)
VITE_WEB3_FUNCTION_ID=

# WalletConnect Project ID (optional)
# VITE_WALLET_CONNECT_PROJECT_ID=

# Alchemy API Key (optional)
# VITE_ALCHEMY_API_KEY=

# Infura API Key (optional)
# VITE_INFURA_API_KEY=

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# VITE_ENABLE_STORIES=true
# VITE_ENABLE_POSTS=true
# VITE_ENABLE_WEB3=true
# VITE_ENABLE_AR_FILTERS=true
